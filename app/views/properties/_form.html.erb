<%= form_with(model: property, local: true) do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
        <% property.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%=form.label :name,"物件名"%>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%=form.label :price,"賃料"%>
    <%= form.text_field :price %>円
  </div>

  <div class="field">
    <%=form.label :address,"住所"%>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%=form.label :age,"築年数"%>
    <%= form.text_field :age %>年
  </div>

  <div class="field">
    <%=form.label :memo,"備考"%>
    <%= form.text_area :memo %>
  </div>

  <div class="line"></div>

  <%count=1%>
  <%=form.fields_for :local_stations do |local_station|%>
    <h3><%="最寄駅#{count}"%></h3>
    <%count+=1%>
    <%=local_station.label :route,"路線名"%>
    <%=local_station.text_field :route%>
    <%=local_station.label :station_name,"駅名"%>
    <%=local_station.text_field :station_name%>
    <%=local_station.label :times,"徒歩"%>
    <%=local_station.text_field :times%>分
    <br>
  <%end%>

  <div class="actions">
    <%= form.submit "登録する" %>
  </div>
<% end %>

<style>
.line{
  border-bottom:solid 1px #696969;
}
</style>